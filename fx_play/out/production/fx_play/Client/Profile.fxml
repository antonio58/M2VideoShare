<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>


<GridPane fx:controller="Client.ProfileController"
          stylesheets="/Client/BaseStyle.css"
          prefHeight="300" prefWidth="500"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text id="welcome-text" text="Profile"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <!--><Label text="Current:"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/><-->

    <Label text="Change:"
          GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="User Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Text fx:id="user" text=""
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <TextField fx:id="nuser"
               GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <!--><-->

    <Label text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Text fx:id="email" text=""
          GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <TextField fx:id="nemail"
               GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <!--><-->

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <PasswordField fx:id="npass"
          GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <PasswordField fx:id="cnpass"
               GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Confirm" fx:id="signIn"
                onAction="#handleConfirm" />
    </HBox>




    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button text="Back" fx:id="back"
                onAction="#handleSubmitBack" />
    </HBox>

    <HBox fx:id="actiontargetBox"
          spacing="10" alignment="center"
          GridPane.columnIndex="1" GridPane.rowIndex="7" >
        <Text fx:id="actiontarget"/>
    </HBox>


</GridPane>