<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<GridPane fx:controller="Client.ErrorScreenController"
          stylesheets="/Client/BaseStyle.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root"
          prefHeight="300" prefWidth="500">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Text id="welcome-text" text="Error"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <HBox fx:id="actiontargetBox"
          spacing="10" alignment="center"
          GridPane.columnIndex="1" GridPane.rowIndex="1" >
        <Text fx:id="actiontarget"/>
    </HBox>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button text="Retry" fx:id="retry"
                onAction="#handleRetry" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="2" GridPane.rowIndex="2">
        <Button text="Exit" fx:id="exit"
                onAction="#handleExit" />
    </HBox>

</GridPane>