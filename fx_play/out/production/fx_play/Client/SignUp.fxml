<?import javafx.scene.layout.GridPane?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="Client.SignUpController"
          stylesheets="/Client/BaseStyle.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root"
          prefHeight="300" prefWidth="500">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text id="welcome-text" text="Sign Up"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="User Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="userId"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="email"
               GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Label text="Confirm Email:"
           GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TextField fx:id="cemail"
               GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <PasswordField fx:id="password"
                   GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <Label text="Confirm Password:"
           GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <PasswordField fx:id="cpassword"
                   GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Confirm" fx:id="signIn"
                onAction="#handleConfirm" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button text="Back" fx:id="back"
                onAction="#handleSubmitBack" />
    </HBox>

    <HBox fx:id="actiontargetBox"
          spacing="10" alignment="center"
          GridPane.columnIndex="1" GridPane.rowIndex="7" >
        <Text fx:id="actiontarget"/>
    </HBox>

</GridPane>